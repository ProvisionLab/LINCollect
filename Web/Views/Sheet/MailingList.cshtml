@model IEnumerable<Web.Data.SurveyFile>
@if (Model != null && Model.Any())
{
<table class="table" id="file-table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="file-@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-right">
                <a href="https://docs.google.com/spreadsheets/d/@item.Link/edit#gid=0" target="_blank">show</a> |
                <a href="#" onclick="deleteFile(@item.Id)">delete</a>
            </td>
        </tr>
    }

</table>
}
else {
    <div class="text-center">Please, add file</div>
}
