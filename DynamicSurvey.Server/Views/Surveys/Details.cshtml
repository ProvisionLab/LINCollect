@model DynamicSurvey.Server.DAL.Entities.Survey
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .surveyDetailsHeader {
        border: dashed;
        position: relative;
        text-align: center;
    }

        .surveyDetailsHeader h2 {
        }

    .pageItem {
    }

    .commonTable {
        margin-left: 5em;
        background-color: rgba(152, 207, 232, 0.70);
        border: double;
    }

        .commonTable th, .commonTable td {
            padding-left: 1em;
            border: solid;
        }

    .fieldTypeCell {
        background-color: rgba(122, 177, 202, 0.70);
    }
</style>

<div class="surveyDetailsHeader">
    @*<h2>@Model.Id</h2>*@
    <h2>@Model.Title</h2>
    @*<h2>@Model.Language</h2>*@
</div>

@foreach (var page in Model.Pages)
{
    <div class="surveyPage">
        <h2>@page.Title</h2>

        <table class="commonTable">
            <tr>
                <th class="fieldTypeCell">
                    FieldType
                </th>
                <th>
                    Id
                </th>
                <th>
                    GroupId
                </th>
                <th>
                    Label
                </th>

            </tr>
            @foreach (var pageItem in page.Fields)
            {
                <tr>
                    <td class="fieldTypeCell">
                        @pageItem.FieldType
                    </td>
                    <td>
                        @pageItem.Id
                    </td>
                    <td>
                        @pageItem.GroupId
                    </td>
                    <td>
                        @pageItem.Label
                    </td>

                </tr>
            }
        </table>
    </div>
}
